<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Google Login</title>
    <style>
      :root {
        --text-main: #1f2937;
        --text-muted: #6b7280;
        --bg-color: #f3f4f6;
        --card-bg: #ffffff;
        --error-color: #ef4444;
      }
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }
      body {
        font-family:
          system-ui,
          -apple-system,
          BlinkMacSystemFont,
          "Segoe UI",
          Roboto,
          Helvetica,
          Arial,
          sans-serif;
        background-color: var(--bg-color);
        background-image: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        color: var(--text-main);
      }
      .container {
        background: var(--card-bg);
        padding: 3rem 2rem;
        border-radius: 16px;
        box-shadow:
          0 10px 25px rgba(0, 0, 0, 0.05),
          0 20px 48px rgba(0, 0, 0, 0.05);
        text-align: center;
        max-width: 400px;
        width: 90%;
        animation: slideUp 0.5s ease-out forwards;
        opacity: 0;
        transform: translateY(20px);
      }
      @keyframes slideUp {
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      .logo {
        width: 48px;
        height: 48px;
        margin-bottom: 1.5rem;
      }
      .title {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
      }
      .subtitle {
        font-size: 0.95rem;
        color: var(--text-muted);
        line-height: 1.5;
        margin-bottom: 2rem;
      }
      .spinner {
        width: 40px;
        height: 40px;
        margin: 0 auto;
        border: 3px solid rgba(0, 0, 0, 0.1);
        border-radius: 50%;
        border-top-color: #4285f4;
        animation: spin 1s ease-in-out infinite;
      }
      @keyframes spin {
        to {
          transform: rotate(360deg);
        }
      }
      .error-container {
        display: none;
        flex-direction: column;
        align-items: center;
      }
      .error-icon {
        width: 48px;
        height: 48px;
        color: var(--error-color);
        margin-bottom: 1rem;
      }
      .error-message {
        color: var(--error-color);
        font-size: 0.9rem;
        margin-top: 0.5rem;
        background: #fef2f2;
        padding: 0.75rem 1rem;
        border-radius: 8px;
        display: inline-block;
        word-break: break-word;
      }
    </style>
  </head>
  <body>
    <div class="container" id="main-content">
      <svg class="logo" viewBox="0 0 48 48" xmlns="http://www.w3.org/2000/svg">
        <path
          fill="#EA4335"
          d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"
        />
        <path
          fill="#4285F4"
          d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"
        />
        <path
          fill="#FBBC05"
          d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"
        />
        <path
          fill="#34A853"
          d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"
        />
        <path fill="none" d="M0 0h48v48H0z" />
      </svg>

      <div id="loading-state">
        <h1 class="title">Signing in...</h1>
        <p class="subtitle">Securely connecting you through Google.</p>
        <div class="spinner"></div>
      </div>

      <div id="error-state" class="error-container">
        <svg
          class="error-icon"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
          ></path>
        </svg>
        <h1 class="title">Sign In Failed</h1>
        <p class="subtitle">We couldn't connect you to your account.</p>
        <p class="error-message" id="error-text">Please try again later.</p>
      </div>
    </div>

    <script>
      (async () => {
        const loadingState = document.getElementById("loading-state");
        const errorState = document.getElementById("error-state");
        const errorText = document.getElementById("error-text");

        const showError = (message) => {
          loadingState.style.display = "none";
          errorState.style.display = "flex";
          if (message) {
            errorText.textContent = message;
          }
        };

        try {
          const response = await fetch(
            "<%= betterAuthUrl %>/api/auth/sign-in/social",
            {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              credentials: "include",
              body: JSON.stringify({
                provider: "google",
                callbackURL: "<%= callbackURL %>",
              }),
            },
          );

          const data = await response.json();

          if (data.url) {
            window.location.replace(data.url);
          } else {
            showError(
              data.error ||
                "An unexpected error occurred while redirecting. Please try again later.",
            );
          }
        } catch (error) {
          showError(
            "Unable to connect to the server. " + (error.message || ""),
          );
        }
      })();
    </script>
  </body>
</html>
